{
  "name": "@gerhobbelt/live-server",
  "version": "1.3.3-31",
  "description": "simple development http server with live reload capability",
  "keywords": [
    "front-end",
    "development",
    "tool",
    "server",
    "http",
    "cli"
  ],
  "author": "Tapio Vierros",
  "dependencies": {
    "@gerhobbelt/json5": "2.1.0-48",
    "@gerhobbelt/markdown-it": "12.0.4-53",
    "@gerhobbelt/serve-index": "1.9.2-1",
    "@gerhobbelt/stream-sink": "2.2.2-5",
    "chokidar": "3.5.1",
    "colors": "1.4.0",
    "connect": "3.7.0",
    "cors": "2.8.5",
    "event-stream": "4.0.1",
    "faye-websocket": "0.11.4",
    "formidable": "1.2.2",
    "http-auth": "4.1.5",
    "http-auth-connect": "1.0.4",
    "http-proxy-middleware": "2.0.0",
    "mkdirp": "1.0.4",
    "morgan": "1.10.0",
    "object-assign": "4.1.1",
    "open": "8.2.0",
    "qrcode-terminal": "0.12.0",
    "send": "0.17.1",
    "spdy": "4.0.2"
  },
  "devDependencies": {
    "eslint": "7.27.0",
    "mocha": "8.4.0",
    "supertest": "6.1.3"
  },
  "scripts": {
    "lint": "eslint live-server.js index.js",
    "fix": "eslint --fix live-server.js index.js",
    "test": "mocha test --timeout 5000 --exit && npm run lint",
    "clear": "rm -f package-lock.json ; rm -rf node_modules",
    "pub": "npm publish --access public"
  },
  "bin": {
    "live-server": "./live-server.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/GerHobbelt/live-server.git"
  },
  "engines": {
    "node": ">=8.3.0"
  },
  "preferGlobal": true,
  "license": "MIT",
  "eslintConfig": {
    "env": {
      "node": true,
      "es6": true
    },
    "rules": {
      "quotes": 0,
      "curly": 0,
      "strict": 0,
      "no-process-exit": 0,
      "eqeqeq": 1,
      "no-unused-vars": 1,
      "no-shadow": 1
    },
    "parserOptions": {
      "ecmaVersion": 8
    }
  }
}
